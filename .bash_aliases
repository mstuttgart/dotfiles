# Aliases
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias -- -="cd -"

# Shortcuts
alias work="cd ~/Workspace"
alias dl="cd ~/Downloads"

# Odoo alises
alias odoodir="cd ~/Workspace/odoo"

# System
alias update="sudo apt update && sudo apt upgrade -y"

# Python aliases
alias venv="source .venv/bin/activate"
alias cenv="virtualenv -p python3 .venv"
