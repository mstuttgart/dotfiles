    "dmenu"
    "dunst"
    #"eos-settings-i3wm"
    #"endeavouros-xfce4-terminal-colors"
    #"eos-lightdm-slick-theme"
    #"eos-qogir-icons"
    "galculator"
    "gsimplecal"
    #    "gvfs"
    #    "gvfs-afc"
