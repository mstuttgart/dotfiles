[github]
    user = mstuttgart

[grep]
    lineNumber = true

[help]
    autocorrect = 1

[fetch]
    prune = true

[alias]
    last = log -1 HEAD

    append = commit --amend --reuse-message=HEAD

    ck = checkout
    ckb = checkout -b
    chp = cherry-pick
    contrib = shortlog --summary --numbered

    rbi = rebase -i

    df = diff --word-diff	
    ft = fetch --all --prune # Fetch all remotes and prune.

    # Logs alias
    gl = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

    # Status alias
    st = status
    ts = status -sb

    # current branch
    here = !git rev-parse --abbrev-ref HEAD

    # publish
    up = !git push origin -u $(git here)
    upf = !git push -f origin -u $(git here)

    # update
    down = !git pull --rebase origin $(git here)

    # unpublish
    purge = !git push origin --delete $(git here)

    # Open .gitconfig in your default editor.
    conf = config --global -e

    # list all git alias
    alias = !git config -l | grep alias

[core]
    editor = nano

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[blame]
    coloring = highlightRecent

[color "diff"]
    meta = yellow bold
    frag = magenta bold # line info
    old = red # deletions
    new = green # additions

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

